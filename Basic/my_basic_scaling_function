def my_slicing(string,start,end,step):
  result = ""
  for i in range(start,end,step):
    result = result + string[i]
  return result

if __name__ == "__main__":
  print("This is our own slicing function:")
  string = input("Enter a string:")
  start = input("Enter start index:")
  end = input("Enter end index:")
  step = input("Enter a step value:")
  result = my_slicing(string,start,end,step)
  print(result)
